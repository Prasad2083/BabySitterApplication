<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nannyscroll"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".ProfileCreationForNanny">


    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/profileimg"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="115dp"
        app:srcCompat="@drawable/friend" />

    <TextView
        android:id="@+id/datawelcome"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textColor="#3990D5"
        android:fontFamily="@font/boogaloo"
        android:gravity="center"
        android:text="Welcome"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textAlignment="center">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="6dp"
            card_view:cardUseCompatPadding="true">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                >

                <TextView
                    android:id="@+id/editfname"
                    android:singleLine="true"
                    android:hint="Full Name"
                    android:background="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_baseline_person_24"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="6dp"
            card_view:cardUseCompatPadding="true">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                >

                <TextView
                    android:id="@+id/editloc"
                    android:singleLine="true"
                    android:hint="Location"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="#FFFFFF"
                    android:drawableStart="@drawable/ic_baseline_location_on_24"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="6dp"
            card_view:cardUseCompatPadding="true">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/editdescription"
                    android:singleLine="true"
                    android:hint="Description"
                    android:background="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_baseline_description_24"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="6dp">

            <TextView
                android:id="@+id/editkids"                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="10"
                android:textSize="20dp"
                android:textStyle="bold"
                android:hint="No of persons" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:cardCornerRadius="6dp"
            app:cardElevation="6dp">

            <TextView
                android:id="@+id/edithour"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="10"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:hint="Per Hour Rate" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/update"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:textColor="#FFFFFF"
        android:text="Profile Created Update Deatils" />

</LinearLayout>